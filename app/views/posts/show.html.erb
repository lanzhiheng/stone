<article class="post h-entry">
  <header class="post-header">
    <h1 class="post-title p-name"><%= @post.title %></h1>
    <p class="post-meta">
      <time class="dt-published"><%= @post.created_at.strftime('%A, %Y-%m-%d') %></time>
    </p>
  </header>

  <div class="post-content">
    <%= @post.body %>
  </div>
</article>
