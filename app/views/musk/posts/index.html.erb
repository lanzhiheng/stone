<div class="table-wrapper">
  <table class="stone-table">
    <thead>
      <tr>
        <th class="w-1/4">Title</th>
        <th class="w-1/4">Draft</th>
        <th class="w-1/4">Views</th>
        <th class="w-1/4">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.draft %></td>
          <td><%= post.category.name %></td>
          <td>
            <%= link_to '查看', musk_post_path(post), class: 'stone-link'  %>
            <%= link_to '修改', edit_musk_post_path(post), class: 'stone-link' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
