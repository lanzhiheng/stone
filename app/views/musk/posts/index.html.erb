<div class="top-btn-area">
  <%= link_to '新建', new_musk_post_path, class: 'btn' %>
</div>

<div class="table-wrapper">
  <table class="stone-table">
    <thead>
      <tr>
        <th class="w-1/4">Title</th>
        <th class="w-1/4">Draft</th>
        <th class="w-1/4">Category</th>
        <th class="w-1/4">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td id=<%= "table_draft_#{post.id}" %>><%= post.draft %></td>
          <td><%= link_to post.category.name, musk_category_path(post.category), class: 'stone-link' %></td>
          <td>
            <%= link_to '查看', musk_post_path(post), class: 'stone-link'  %>
            <%= link_to '修改', edit_musk_post_path(post), class: 'stone-link' %>
            <%= link_to '预览', preview_post_path(post), class: 'stone-link', target: '_blank' %>

            <%= toggle_link(post) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="top-btn-area">
    <%= will_paginate @posts, previous_label: '&larr;', next_label: '&rarr;', class: 'pager' %>
  </div>
</div>
